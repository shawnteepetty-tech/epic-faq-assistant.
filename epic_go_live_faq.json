// Training Materials
if (module.trainingMaterials && module.trainingMaterials.length > 0) {
  const trainDetails = document.createElement("details");
  trainDetails.innerHTML = `<summary>ðŸ“‚ Training Materials</summary>`;
  const ul = document.createElement("ul");
  ul.className = "steps";

  module.trainingMaterials.forEach(mat => {
    const li = document.createElement("li");
    if (typeof mat === "string") {
      li.textContent = mat; // fallback if old format
    } else {
      const a = document.createElement("a");
      a.textContent = mat.title;
      a.href = mat.url;
      a.target = "_blank"; // opens in new tab
      li.appendChild(a);
    }
    ul.appendChild(li);
  });

  trainDetails.appendChild(ul);
  moduleDiv.appendChild(trainDetails);
}
