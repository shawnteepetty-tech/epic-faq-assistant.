{
  "modules": [
    {
      "module": "CardioServer – Tech User",
      "category": "Cardiology",
      "roles": ["Tech User"],
      "steps": [
        {
          "title": "Access CardioServer",
          "items": [
            "In Epic, open the patient chart → click the CardioServer SmartLink/URL.",
            "OR on the desktop, double-click the CardioServer icon.",
            "OR in Citrix Workspace → CardioServer → Open.",
            "On the login page, enter AD username + password.",
            "Confirm header shows Role = Tech User."
          ]
        },
        {
          "title": "Find & Filter Studies",
          "items": [
            "Open Worklist / Studies view.",
            "Set Facility/Location filter.",
            "Set Status filter: Preliminary / Unconfirmed / Confirmed / Stored.",
            "Optional: set Date filter (Today, Last 7 Days, Custom).",
            "Click Apply / Search."
          ]
        }
      ],
      "qa": [
        {
          "q": "What if a study doesn’t match any patient/order?",
          "a": "Use Link/Reconcile → search MRN → select correct order."
        }
      ],
      "trainingMaterials": [
        { "title": "Study Materials Placeholder", "url": "#" }
      ]
    },
    {
      "module": "EVC (Telehealth / Video Consults)",
      "category": "Telehealth",
      "roles": ["Provider", "Bedside Staff"],
      "steps": [
        {
          "title": "Launch a Consult",
          "items": [
            "In Epic, open the Connect section from Rooming or Plan tab.",
            "Select patient encounter.",
            "Click Start Video Visit."
          ]
        }
      ],
      "qa": [
        {
          "q": "What if patient can’t hear me?",
          "a": "Check mute, device volume, and network connection."
        }
      ],
      "trainingMaterials": [
        { "title": "Study Materials Placeholder", "url": "#" }
      ]
    },
    {
      "module": "ASAP (ED Track Board)",
      "category": "Emergency Department",
      "roles": ["Nurse", "Provider"],
      "steps": [
        {
          "title": "Track Board Overview",
          "items": [
            "Open ED Track Board.",
            "Review columns for Bed, Name, Age, Complaint, Acuity, Staff initials.",
            "Hover over initials for full staff names."
          ]
        }
      ],
      "qa": [
        {
          "q": "What does an X in registration mean?",
          "a": "Registration incomplete. It won’t block discharge."
        }
      ],
      "trainingMaterials": [
        { "title": "Study Materials Placeholder", "url": "#" }
      ]
    },
    {
