      "roles": ["Phlebotomist", "Lab Tech"],
      "steps": [
        {
          "title": "Specimen Collection",
          "items": [
            "Check in patient → enter orders.",
            "Print specimen labels.",
            "Scan wristband → scan specimen.",
            "Transport to lab."
          ]
        },
        {
          "title": "Processing",
          "items": [
            "Scan barcode in Receiving.",
            "Verify orders and containers.",
            "Cancel/redraw as needed."
          ]
        },
        {
          "title": "Tech Workflow",
          "items": [
            "Use Outstanding List.",
            "Perform repeats if needed.",
            "Verify results.",
            "Document critical values."
          ]
        }
      ],
      "qa": [
        { "q": "How do I reprint a specimen label?", "a": "Open Order → Reprint Label." }
      ],
      "trainingMaterials": [
        { "title": "Lab Placeholder", "url": "#" }
      ]
