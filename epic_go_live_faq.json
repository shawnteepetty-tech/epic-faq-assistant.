{
  "modules": [
    {
      "module": "CardioServer – Tech User",
      "category": "Cardiology",
      "roles": ["Tech User"],
      "steps": [
        {
          "title": "Access CardioServer",
          "items": [
            "In Epic, open the patient chart → click the CardioServer SmartLink/URL.",
            "OR on the desktop, double-click the CardioServer icon.",
            "OR in Citrix Workspace → CardioServer → Open.",
            "On the login page, enter AD username + password.",
            "Confirm header shows Role = Tech User."
          ]
        },
        {
          "title": "Find & Filter Studies",
          "items": [
            "Open Worklist / Studies.",
            "Set Facility/Location filter.",
            "Set Status filter: Preliminary / Unconfirmed / Confirmed / Stored.",
            "Optional: Date filter.",
            "Click Apply / Search."
          ]
        },
        {
          "title": "Link Study to Patient & Order",
          "items": [
            "Click study → Link to Order/Reconcile.",
            "Search MRN or Name.",
            "Select patient + correct order.",
            "Click Save / Link."
          ]
        },
        {
          "title": "Assign Study to Provider",
          "items": [
            "Open study → Provider/Assign field.",
            "Type/select provider.",
            "Click Save/Update."
          ]
        },
        {
          "title": "Trash & Restore Studies",
          "items": [
            "Open study with Status = Preliminary.",
            "Click More Actions → Move to Trash.",
            "To restore ≤30 days: open Trash → Restore."
          ]
        },
        {
          "title": "Manual Upload – ECG",
          "items": [
            "Click Upload/Import → ECG Upload.",
            "Browse → select ECG file.",
            "Enter MRN → Upload/Import.",
            "Link to order + assign provider."
          ]
        },
        {
          "title": "Manual Upload – Stress Test",
          "items": [
            "Click Upload/Import → Stress Upload.",
            "Browse → select stress file.",
            "Enter MRN → Upload/Import.",
            "Assign provider."
          ]
        }
      ],
      "qa": [
        { "q": "What if a study doesn’t match a patient?", "a": "Use Link/Reconcile → search MRN → select correct order." },
        { "q": "Can I trash an Unconfirmed study?", "a": "No, only Preliminary can be trashed." }
      ],
      "trainingMaterials": [
        { "title": "Study Materials Placeholder", "url": "#" }
      ]
    },
    {
      "module": "EVC (Telehealth / Video Consults)",
      "category": "Telehealth",
      "roles": ["Provider", "Bedside Staff"],
      "steps": [
        {
          "title": "Accessing & Navigating EVC",
          "items": [
            "Open patient encounter in Epic.",
            "Locate Connect section (Rooming tab or Plan tab).",
            "Start video visit."
          ]
        },
        {
          "title": "Inviting Participants",
          "items": [
            "Click Send Direct Link.",
            "Providers: invite via Epic directory.",
            "Guests: enter name, relationship, and email/phone.",
            "Verify contact details before sending."
          ]
        },
        {
          "title": "Joining & Managing Calls",
          "items": [
            "Set up mic, webcam, and speakers.",
            "Admit patient via Admit button or Open menu.",
            "Mute/unmute or disable webcam as needed.",
            "Remove participants if necessary."
          ]
        },
        {
          "title": "Call Controls",
          "items": [
            "Use toolbar (mic, webcam, screen share).",
            "Be cautious with screen sharing.",
            "End call when session is complete."
          ]
        }
      ],
      "qa": [
        { "q": "How do I invite a guest?", "a": "Enter guest’s name, relationship, and email/phone." },
        { "q": "What’s the difference between Leave vs End Call?", "a": "Leave keeps it running; End Call ends it for all (preferred)." }
      ],
      "trainingMaterials": [
        { "title": "EVC Training Placeholder", "url": "#" }
      ]
    },
    {
      "module": "ASAP (ED Track Board)",
      "category": "Emergency Department",
      "roles": ["Nurse", "Provider"],
      "steps": [
        {
          "title": "Track Board Overview",
          "items": [
            "Open ED Track Board.",
            "Review columns: bed, name, complaint, acuity, staff.",
            "Hover initials for details."
          ]
        },
        {
          "title": "Order Status Icons",
          "items": [
            "Check columns for EKG, Meds, Labs, Imaging.",
            "Counts show Placed, In Process, Completed."
          ]
        },
        {
          "title": "Registration & Disposition",
          "items": [
            "✔ = registration complete.",
            "X = incomplete (does not block discharge).",
            "Disposition = destination."
          ]
        },
        {
          "title": "Layout Customization",
          "items": [
            "Drag/drop columns to rearrange.",
            "Save custom layout if available."
          ]
        },
        {
          "title": "Views",
          "items": [
            "Toggle Side-by-Side or Summary view.",
            "Click magnifying glass for more details."
          ]
        }
      ],
      "qa": [
        { "q": "What does X in registration mean?", "a": "Registration incomplete; won’t block discharge." }
      ],
      "trainingMaterials": [
        { "title": "ED Track Board Placeholder", "url": "#" }
      ]
    },
    {
