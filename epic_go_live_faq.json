    {
      "module": "Inpatient Provider Workflow",
      "category": "Inpatient",
      "roles": ["Hospitalist", "Resident", "Consultant"],
      "steps": [
        {
          "title": "Navigation & Storyboard",
          "items": [
            "Open My Lists.",
            "Review Storyboard: demographics, team, labs."
          ]
        },
        {
          "title": "Problem List & Orders",
          "items": [
            "Add/update/resolve problems.",
            "Place/review orders."
          ]
        },
        {
          "title": "Medication Reconciliation",
          "items": [
            "Admission: reconcile home meds.",
            "Transfer: reconcile again.",
            "Discharge: finalize reconciliation."
          ]
        },
        {
          "title": "Discharge & AVS",
          "items": [
            "Review allergies, orders, problems.",
            "Finalize discharge orders.",
            "Generate AVS → Print/Send."
          ]
        }
      ],
      "qa": [
        { "q": "Where do I reconcile meds?", "a": "At admission, transfer, and discharge." }
      ],
